<%- include('header'); -%>
<h1><strong><%= title %>: <%= genre.name %></strong></h1>
<% if (books_on_genre.length > 0){ %>
    <p><strong>Delete the following books before attempting to delete this genre.</strong></p>
    <div style="margin-left: 20px;margin-top: 20px;">
        <h4>Books</h4>
        <dl>
            <% books_on_genre.forEach(function(book){ %>
                <dt><a href="<%= book.url %>"><%= book.title %></a></dt>
                <dd><%= book.summary %></dd>
            <% }) %>
        </dl>
    </div>
<% }else{ %>
    <p>Do you really want to delete this Genre?</p>
    <form action="" method="post">
        <div class="form-group">
            <input type="hidden" id="genreId" class="form-control" name="genreId" required value="<%= genre._id %>">
        </div>
        <button class="btn btn-danger" type="submit">Delete</button>
    </form>
<% } %>
<%- include('footer'); -%>