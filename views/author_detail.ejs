<%- include('header'); -%>
<h1>Author: <%= author.name %></h1>
<p><%= author.lifespan %></p>
<div style="margin-top: 20px;margin-left: 20px;">
    <h4>Books</h4>
    <dl>
    <% if (author_books.length > 0) { %>
    <% author_books.forEach(function(book){ %>
        <dt><a href="<%= book.url %>"><%= book.title %></a></dt>
        <dd><%= book.summary %></dd>
    <% }); %>
    <%} else {%>
        <p>This author has no books.</p>
    <%} %>
    </dl>   
</div>
<hr>
<p><a href="<%= author.url %>/update" class="btn btn-primary">Update author</a></p>
<p><a href="<%= author.url %>/delete" class="btn btn-danger">Delete author</a></p>
<%- include('footer'); -%>