<%- include('header'); -%>
<h1>Genre: <%= genre.name %></h1>
<div>
    <% if (genre_books.length > 0) { %>
        <% genre_books.forEach(function(book){ %>
        <a href="<%= book.url %>"><%= book.title %></a>
        <p><%= book.summary %></p>
        <% }); %>
    <%} else {%>
        <p>This genre has no books</p>
    <%} %>
</div>  
<p><a href="<%= genre.url %>/update" class="btn btn-primary">Update genre</a></p>
<p><a href="<%= genre.url %>/delete" class="btn btn-danger">Delete genre</a></p>
<%- include('footer'); -%>