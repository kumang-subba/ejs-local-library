<%- include('header'); -%>
<h1><strong><%= title %>: <%= book.name %></strong></h1>
<p><%= book.author.name %></p>
<% if (bookInstances.length > 0){ %>
    <p><strong>Delete the following instances before attempting to delete this Book.</strong></p>
    <div style="margin-left: 20px;margin-top: 20px;">
        <h4>Instances</h4>
        <dl>
            <% bookInstances.forEach(function(instance){ %>
                <dt><a href="<%= instance.url %>"><%= instance._id %></a></dt>
                <% if (instance.status == "Available") { %>
                    <dd class="text-success"><%= instance.status %></dd>
                <% } else if (instance.status == "Maintenance") { %>
                    <dd class="text-danger"><%= instance.status %></dd>
                <% } else { %>
                    <dd class="text-warning"><%= instance.status %></dd>
                <% } %>
            <% }) %>
        </dl>
    </div>
<% }else{ %>
    <p>Do you really want to delete this Book?</p>
    <form action="" method="post">
        <div class="form-group">
            <input type="hidden" id="bookId" class="form-control" name="bookId" required value="<%= book._id %>">
        </div>
        <button class="btn btn-danger" type="submit">Delete</button>
    </form>
<% } %>
<%- include('footer'); -%>